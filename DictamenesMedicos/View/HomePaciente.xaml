<Window x:Class="DictamenesMedicos.View.HomePaciente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictamenesMedicos.View"
        xmlns:viewModel="clr-namespace:DictamenesMedicos.ViewModel"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="HomePaciente" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:HomePacienteViewModel></viewModel:HomePacienteViewModel>
    </Window.DataContext>
    
    <!-- Contenedor principal con bordes -->

    <Border CornerRadius="0" >
        <Border CornerRadius="0" BorderThickness="0" Opacity="1" >
            <Border.Background>
                <SolidColorBrush Color="White" />
                <!-- Color de fondo de la ventana -->
            </Border.Background>


            <!-- Estructura de la interfaz con un Grid -->
            <Grid>


                <!-- Definición de una fila para la barra de título -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"></RowDefinition>
                    <!--barra superior-->
                    <RowDefinition Height="*"></RowDefinition>
                    <!--contenido principal de la ventana-->
                </Grid.RowDefinitions>




                <!-- Grid para la barra superior -->
                <Grid Grid.Row="0"  Background="#424242">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="5">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>



                    <!-- Título de la ventana -->
                    <TextBlock Text="Home User"
                    Foreground="White"
                    FontSize="15"
                    FontFamily="Monserrat"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0">

                    </TextBlock>

                    <!--Boton para minimizar-->
                    <Button x:Name="btnMinimizar"
                 BorderThickness="0"
                 Content="-"
                 Foreground="White"
                 FontSize="16"
                 FontFamily="Montserrat"
                 Cursor="Hand"
                 Grid.Column="1"
                 Click="btnMinimizar_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGreen">

                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                             Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>

                    </Button>



                    <!--Boton para cerrar-->
                    <Button x:Name="btnClose"
                 BorderThickness="0"
                 Content="x"
                 Foreground="White"
                 FontSize="16"
                 FontFamily="Montserrat"
                 Cursor="Hand"
                 Grid.Column="2"
                 Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red">
                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                             Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>



                <!-- Grid con dos columnas para el contenido -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <!-- Panel lateral gris -->
                        <ColumnDefinition Width="*"/>
                        <!-- Contenido principal -->
                    </Grid.ColumnDefinitions>




                    <!-- Panel lateral -->
                    <Grid Background="#5bc6de" Grid.Column="0">

                        <!-- Sub-Grid vertical dentro del panel lateral -->
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <!-- filas con tamaño auto ajustables al contenido -->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>



                            </Grid.RowDefinitions>

                            <!-- contenido del panel lateral, para agregar algo nuevo crear una nueva fila  -->

                            <Image Source="/images/user.png"
                                       Width="70"
                                       Height="70"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>

                           <TextBlock Text="Name user"
                           Grid.Row="1"
                           Foreground="Black"
                           FontSize="14"
                           Margin="0,10,0,10"
                           HorizontalAlignment="Center"/>
                            
                            <Button x:Name="btnMisCitas"
                                    Grid.Row="2" 
                                    Command="{Binding MisCitasCommand}"
                                    BorderThickness="0"
                                    Content="Mis Citas"
                                    Foreground="Black"
                                    FontSize="14"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Margin="0,30,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFAFA"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#EAF6FA"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="150" Height="25" CornerRadius="15"
                                         Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                            </ContentPresenter>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="btnMisDictamenes"
                                Grid.Row="3" 
                                Command="{Binding DictamenCommand}"
                                BorderThickness="0"
                                Content="Mis Dictámenes"
                                Foreground="Black"
                                FontSize="14"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Margin="0,15,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FFFAFA"></Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#EAF6FA"></Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Width="150" Height="25" CornerRadius="15"
                                                    Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"
                                                     HorizontalAlignment="Center">
                                                    </ContentPresenter>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                            </Button>

                            <Button x:Name="btnSalir"
                                Grid.Row="4" 
                                Command="{Binding SalirCommand}"
                                BorderThickness="0"
                                Content="Salir"
                                Foreground="#FFFFFF"
                                FontSize="14"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Margin="0,140,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#1E1E1E"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#777777"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="150" Height="25" CornerRadius="15"
                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                     HorizontalAlignment="Center">
                                            </ContentPresenter>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                        </Grid>

                    </Grid>




                    <!-- Contenido principal -->
                    <Grid Background="White" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6.5*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <!--Colocando la publicidad-->
                        <Image Source="\images\advertisement.jpeg" Width="500" Height="280"/>

                        <!--Botón de Solicitar Cita-->
                        <Button x:Name="btnSolicitarCita"
                            Grid.Row="2" 
                            Command="{Binding SolicitarCitaCommand}"
                            BorderThickness="0"
                            Content="Solicitar Cita"
                            Foreground="Black"
                            FontSize="20"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="200,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#E0E0E0"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EAF6FA"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="200" Height="40" CornerRadius="15"
             Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                                        </ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>

                </Grid>




            </Grid>
            <!--cierre grid principal-->
        </Border>
    </Border>
</Window>
