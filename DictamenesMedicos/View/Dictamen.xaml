<Window x:Class="DictamenesMedicos.View.DictamenMedico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dictamen Médico" Height="500" Width="600"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Contenedor principal con solo borde negro -->
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid Background="White">
            <!-- Barra superior con título y botones -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barra superior negra -->
            <Border Grid.Row="0" Background="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Dictamen Médico"
                               Foreground="White"
                               FontSize="14"
                               Margin="10,0"
                               VerticalAlignment="Center"/>

                    <!-- Botón Minimizar -->
                    <Button Grid.Column="1" Content="-"
                            Foreground="White"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Botón Cerrar -->
                    <Button Grid.Column="2" Content="×"
                            Foreground="White"
                            FontSize="14"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Contenido del dictamen -->
            <ScrollViewer Grid.Row="1" Margin="20">
                <StackPanel>
                    <TextBlock Text="Nombre del Paciente: Juan Pérez"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Edad: 20"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Género: Masculino"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Fecha de Nacimiento: 12/02/2005"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Fecha de Realización: 25/02/2025"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Motivo de Consulta:"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox AcceptsReturn="True"
                             MinHeight="60"
                             Margin="0,0,0,10"
                             BorderBrush="#CCCCCC"/>

                    <TextBlock Text="Observaciones:"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox AcceptsReturn="True"
                             MinHeight="60"
                             Margin="0,0,0,20"
                             BorderBrush="#CCCCCC"/>

                    <TextBlock Text="Medicamento a Recetar:"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox AcceptsReturn="True"
                             MinHeight="60"
                             Margin="0,0,0,20"
                             BorderBrush="#CCCCCC"/>

                    <Separator Margin="0,0,0,20"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Botón Regresar -->
            <Button Grid.Row="2"
                    Content="Regresar"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,20"
                    Padding="20,5"
                    Background="Black"
                    Foreground="White"
                    FontSize="14"
                    Cursor="Hand">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#333333" 
                                              Duration="0:0:0.1"
                                              Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="Black" 
                                              Duration="0:0:0.1"
                                              Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </Grid>
    </Border>
</Window>
