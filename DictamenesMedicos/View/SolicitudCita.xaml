<Window x:Class="DictamenesMedicos.View.SolicitudCita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictamenesMedicos.View"
        mc:Ignorable="d"
        Title="SolicitudCita" Height="450" Width="800"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Contenedor principal con bordes -->

    <Border CornerRadius="0" >
        <Border CornerRadius="0" BorderThickness="2" Opacity="1" >
            <Border.Background>
                <SolidColorBrush Color="White" />
                <!-- Color de fondo de la ventana -->
            </Border.Background>


            <!-- Estructura de la interfaz con un Grid -->
            <Grid>


                <!-- Definición de una fila para la barra de título -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"></RowDefinition>
                    <!--barra superior-->
                    <RowDefinition Height="*"></RowDefinition>
                    <!--contenido principal de la ventana-->
                </Grid.RowDefinitions>




                <!-- Grid para la barra superior -->
                <Grid Grid.Row="0"  Background="#424242">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="5">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>



                    <!-- Título de la ventana -->
                    <TextBlock Text="Solicitud cita"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Monserrat"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                    </TextBlock>

                    <!--Boton para minimizar-->
                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGreen">

                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                 Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>

                    </Button>



                    <!--Boton para cerrar-->
                    <Button x:Name="btnClose"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red">
                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                 Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>



                <!-- Grid con dos columnas para el contenido -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <!-- Panel lateral gris -->
                        <ColumnDefinition Width="*"/>
                        <!-- Contenido principal -->
                    </Grid.ColumnDefinitions>




                    <!-- Panel lateral -->
                    <Grid Background="#5bc6de" Grid.Column="0">

                        <!-- Sub-Grid vertical dentro del panel lateral -->
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <!-- filas con tamaño auto ajustables al contenido -->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- contenido del panel lateral, para agregar algo nuevo crear una nueva fila  -->

                            <Image Source="/images/user.png"
                                           Width="70"
                                           Height="70"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,20,0,0"/>

                            <TextBlock Text="Name user"
                               Grid.Row="1"
                               Foreground="Black"
                               FontSize="14"
                               Margin="0,10,0,10"
                               HorizontalAlignment="Center"/>

                            <Button Content="Ver perfil" Width="150" Height="40" Grid.Row="2" FontFamily="Montserrat" Background="LightGray" FontSize="14" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="15">  
                                            <!-- Aquí defines cuánto de redondeado -->
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                        </Grid>

                    </Grid>




                    <!-- Contenido principal -->
                    <Grid Background="White" Grid.Column="1">
                       
                        
                        <!--sub-grid para contenido principal-->
                        <Grid Margin="15" Background="LightGray">

                            <Grid.RowDefinitions>
                                <!-- filas con tamaño auto ajustables al contenido -->
                                <RowDefinition Height="Auto"/> <!--titulo-->
                                <RowDefinition Height="Auto"/> <!--subtitulo-->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/> 
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!--titulo-->
                            <TextBlock Text="Cita Médica" 
                                       Grid.ColumnSpan="2"
                                       Grid.Row="0" 
                                       FontSize="40" 
                                       FontFamily="Montserrat"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,10"/>

                            <TextBlock Text="Requisitos para agendar su cita médica"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="SemiBold"
                                       Grid.Row="2" Grid.ColumnSpan="2"
                                       HorizontalAlignment="Left"
                                       Margin="10,5,0,5"/>

                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="20,5" >
                                <TextBlock Text="• CURP" FontSize="14"/>
                                <TextBlock Text="• NSS (Número de Seguro Social)" FontSize="14"/>
                                <TextBlock Text="• Correo Electrónico" FontSize="14"/>
                                <TextBlock Text="• Estar registrado en la plataforma" FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="CURP:" 
                                       FontWeight="Bold"
                                       Grid.Row="4" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="30,5"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Height="30" Margin="10" TextChanged="TextBox_TextChanged"/>


                            <TextBlock Text="Correo Electrónico:" 
                                       FontWeight="Bold"
                                       Grid.Row="5" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="30,10"/>  
                            <TextBox Grid.Row="5" Grid.Column="2" Height="30" Margin="10"/>


                            <Button Content="Continuar" 
                                    HorizontalAlignment="Right" 
                                    Width="150" Height="40" 
                                    Grid.Row="6" Grid.Column="1" 
                                    FontFamily="Montserrat" 
                                    Background="Black" 
                                    Foreground="White" 
                                    FontSize="14" 
                                    Cursor="Hand"
                                    Click="Button_Click">       

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="15">

                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"/>      

                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>

                            </Button>

                            
                            
                            
                        </Grid>

                    </Grid>

                </Grid>




            </Grid>
            <!--cierre grid principal-->
        </Border>
    </Border>

</Window>
