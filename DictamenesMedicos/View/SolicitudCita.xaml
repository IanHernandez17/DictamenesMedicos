<Window x:Class="DictamenesMedicos.View.SolicitudCita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictamenesMedicos.View"
        xmlns:customcontrols="clr-namespace:DictamenesMedicos.CustomControls"
        mc:Ignorable="d"
        Title="SolicitudCita" Height="450" Width="800"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Contenedor principal con bordes -->

    <Border CornerRadius="0" >
        <Border CornerRadius="0" BorderThickness="2" Opacity="1" >
            <Border.Background>
                <SolidColorBrush Color="White" />
                <!-- Color de fondo de la ventana -->
            </Border.Background>


            <!-- Estructura de la interfaz con un Grid -->
            <Grid>


                <!-- Definición de una fila para la barra de título -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"></RowDefinition>
                    <!--barra superior-->
                    <RowDefinition Height="*"></RowDefinition>
                    <!--contenido principal de la ventana-->
                </Grid.RowDefinitions>




                <!-- Grid para la barra superior -->
                <Grid Grid.Row="0"  Background="#424242">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="5">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>



                    <!-- Título de la ventana -->
                    <TextBlock Text="Solicitud cita"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Monserrat"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                    </TextBlock>

                    <!--Boton para minimizar-->
                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGreen">

                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                 Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>

                    </Button>



                    <!--Boton para cerrar-->
                    <Button x:Name="btnClose"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red">
                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                 Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>



                <!-- Grid con dos columnas para el contenido -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <!-- Panel lateral gris -->
                        <ColumnDefinition Width="*"/>
                        <!-- Contenido principal -->
                    </Grid.ColumnDefinitions>




                    <!-- Panel lateral -->
                    <Grid Background="#5bc6de" Grid.Column="0">

                        <!-- Sub-Grid vertical dentro del panel lateral -->
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <!-- filas con tamaño auto ajustables al contenido -->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- contenido del panel lateral, para agregar algo nuevo crear una nueva fila  -->

                            <Image Source="/images/user.png"
                                           Width="70"
                                           Height="70"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,20,0,0"/>

                            <TextBlock Text="Name user"
                               Grid.Row="1"
                               Foreground="Black"
                               FontSize="14"
                               Margin="0,10,0,10"
                               HorizontalAlignment="Center"/>

                            <Button Content="Regresar" 
                                    Width="150" 
                                    Height="40" 
                                    Grid.Row="2" 
                                    FontFamily="Montserrat" 
                                    Background="LightGray" 
                                    FontSize="14" 
                                    VerticalAlignment="Bottom"
                                    Cursor="Hand"
                                    Command="{Binding}">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="15">
                                            <!-- Aquí defines cuánto de redondeado -->
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                        </Grid>

                    </Grid>



                    <!-- Contenido principal -->
                    <Grid Background="White" Grid.Column="1">
                        <!--sub-grid para contenido principal-->
                        <Grid Margin="10" Background="LightGray">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!--titulo-->
                                <RowDefinition Height="Auto"/>
                                <!--subtitulo-->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--titulo-->
                            <TextBlock Text="Agenda tu Cita" 
                                       Grid.ColumnSpan="2"
                                       Grid.Row="0" 
                                       FontSize="40" 
                                       FontFamily="Montserrat"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>

                            <TextBlock Text="Aviso de seguridad"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="SemiBold"
                                       Grid.Row="1" Grid.ColumnSpan="2"
                                       HorizontalAlignment="Left"
                                       Margin="30,5,30,5"/>

                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="30,5,30,0" TextWrapping="Wrap"
                                       FontFamily="Montserrat" FontSize="12">
                                Por motivos de seguridad y para asegurar una atención adecuada, le solicitamos verificar que todos los datos ingresados sean correctos y correspondan a su información oficial. 
                                Sus datos personales serán tratados bajo estricta confidencialidad y utilizados únicamente para la gestión de su cita médica y seguimiento clínico.
                            </TextBlock>

                            <TextBlock Text="Telefono (opcional):" 
                                       FontWeight="Bold"
                                       Grid.Row="3" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="30,10,10,10"/>


                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     Height="30" 
                                     Margin="0,10,30,10"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Correo Electrónico:" 
                                       FontWeight="Bold"
                                       Grid.Row="4" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="30,10,10,10"/>

                            <TextBox Grid.Row="4" Grid.Column="1" 
                                     Height="30" 
                                     Margin="0,10,30,10"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Fecha de cita:"
                                       FontWeight="Bold"
                                       Grid.Row="5" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="30,10,10,10"/>

                            <DatePicker Width="200" 
                                        Grid.Row="5" Grid.Column="1" 
                                        HorizontalAlignment="Left"
                                        Height="30" 
                                        VerticalAlignment="Center"
                                        SelectedDate="{Binding FechaSeleccionada}" 
                                        FontFamily="Montserrat" 
                                        FontSize="14" 
                                        Margin="0,10,30,10"/>

                            <TextBlock Text="Tipo examen:" 
                                       FontWeight="Bold"
                                       Grid.Row="6" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="30,10,10,10"/>

                            <ComboBox Width="200" Height="30" 
                                      FontFamily="Montserrat" 
                                      FontSize="14" 
                                      Grid.Row="6" Grid.Column="1" 
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Margin="0,10,30,10">
                                <ComboBoxItem Content="vista" />
                                <ComboBoxItem Content="examen general" />
                                <ComboBoxItem Content="sangre" />
                            </ComboBox>

                            <Button Content="Agendar" 
                                    HorizontalAlignment="Right"  
                                    Width="150" Height="40" 
                                    Grid.Row="7" Grid.Column="1" 
                                    FontFamily="Montserrat" 
                                    Background="Black" 
                                    Foreground="White" 
                                    FontSize="14" 
                                    Margin="30,7,30,5"
                                    Cursor="Hand" Click="Button_Click_1">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center" 
                                                              TextElement.Foreground="{TemplateBinding Foreground}"/>   
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>

                            </Button>


                            <Popup x:Name="ventaconfirmacion" IsOpen="False" StaysOpen="false" Placement="Center">
                                
                            </Popup>

                        </Grid>
                    </Grid>




                </Grid>

            </Grid>
            <!--cierre grid principal-->
        </Border>
    </Border>

</Window>
