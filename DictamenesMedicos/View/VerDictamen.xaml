<Window x:Class="DictamenesMedicos.View.VerDictamen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customcontrols="clr-namespace:DictamenesMedicos.CustomControls"
        xmlns:viewModel ="clr-namespace:DictamenesMedicos.ViewModel"
        xmlns:local="clr-namespace:DictamenesMedicos.View"
        mc:Ignorable="d"
        Title="Ver Dictamen" Height="450" Width="800"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:VerDictamenViewModel></viewModel:VerDictamenViewModel>
    </Window.DataContext>

    <!-- Contenedor principal con bordes -->
    <Border CornerRadius="0">
        <Border CornerRadius="0" BorderThickness="2" Opacity="1">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>

            <!-- Estructura de la interfaz con un Grid -->
            <Grid>
                <!-- Definición de filas -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barra superior -->
                <Grid Grid.Row="0" Background="#424242">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título de la ventana -->
                    <TextBlock Text="Ver Dictamen"
                               Foreground="White"
                               FontSize="15"
                               FontFamily="Monserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <!-- Botón para minimizar -->
                    <Button x:Name="btnMinimizar"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Botón para cerrar -->
                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="x"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Contenido principal -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Panel lateral -->
                    <Grid Background="#5bc6de" Grid.Column="0">
                        <StackPanel Margin="10" VerticalAlignment="Top">
                            <Image Source="/images/user.png"
                                   Width="70"
                                   Height="70"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,10"/>

                            <TextBlock Text="Nombre Usuario"
                                       Foreground="Black"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <!-- Botón Regresar redondeado debajo del nombre -->
                            <Button x:Name="btnRegresar"
                                    Content="Regresar"
                                    Width="150"
                                    Height="40"
                                    FontFamily="Montserrat"
                                    Background="LightGray"
                                    Foreground="Black"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20"
                                    Cursor="Hand"
                                    Click="Button_Click"
                                     Command="{Binding regresarCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#424242"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5bc6de"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="BorderBrush" Value="#424242"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Contenido principal - Lista de dictámenes -->
                    <Grid Background="White" Grid.Column="1">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Mi Lista de Dictámenes"
                                       Foreground="Black"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <!-- Tabla de dictámenes -->
                            <DataGrid x:Name="dgDictamenes"
                                     Grid.Row="1"
                                     AutoGenerateColumns="False"
                                     HeadersVisibility="Column"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Folio" Binding="{Binding Folio}" Width="*"/>
                                    <DataGridTextColumn Header="Prueba" Binding="{Binding Prueba}" Width="*"/>
                                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*"/>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5bc6de"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>

                            <!-- Botón Ver -->
                            <Button x:Name="btnVer"
                                    Grid.Row="2"
                                    Content="Ver"
                                    Background="#424242"
                                    Foreground="White"
                                    FontSize="14"
                                    FontFamily="Montserrat"
                                    Margin="0,20,0,0"
                                    Padding="20,5"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#424242"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5bc6de"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="BorderBrush" Value="#424242"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>