<Window x:Class="DicatamenesMedicos_program.View.singUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicatamenesMedicos_program.View"
        mc:Ignorable="d"
        Title="singUp" Height="450" Width="800"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">



    <!-- Contenedor principal con bordes -->

    <Border CornerRadius="0" >
        <Border CornerRadius="0" BorderThickness="2" Opacity="1" >
            <Border.Background>
                <SolidColorBrush Color="White" /><!-- Color de fondo de la ventana -->
            </Border.Background>


            <!-- Estructura de la interfaz con un Grid -->
            <Grid>


                <!-- Definición de una fila para la barra de título -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition><!--barra superior-->
                    <RowDefinition Height="*"></RowDefinition> <!--contenido principal de la ventana-->
                </Grid.RowDefinitions>
                
                


                <!-- Grid para la barra superior -->
                <Grid Grid.Row="0"  Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="25">

                        </ColumnDefinition>
                        <ColumnDefinition Width="5">

                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>



                    <!-- Título de la ventana -->
                    <TextBlock Text="Sing up"
                        Foreground="Black"
                        FontSize="15"
                        FontFamily="Monserrat"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                    </TextBlock>

                    <!--Boton para minimizar-->
                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">

                    <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGreen">

                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                    </Button.Style>
                        
                         <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                 Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    
                    
                    <!--Boton para cerrar-->
                    <Button x:Name="btnClose"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Montserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#555555">

                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red">
                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <!-- Personalización del botón -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                 Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                    </ContentPresenter>

                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>
      
                </Grid>



                <!-- Grid con dos columnas para el contenido -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <!-- Panel lateral gris -->
                        <ColumnDefinition Width="*"/>
                        <!-- Contenido principal -->
                    </Grid.ColumnDefinitions>

                    <!-- Panel lateral -->
                    <Grid Background="#5bc6de" Grid.Column="0">
                        <TextBlock Text="Panel Lateral"
                                   Foreground="White"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <!--aqui va el contenido lateral-->
                        
                        
                    </Grid>

                    
                    <!-- Contenido principal -->
                    <Grid Background="White" Grid.Column="1">
                        <TextBlock Text="Contenido Principal"
                                   Foreground="Black"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        
                        <!--ccontenido principal-->
                        
                    </Grid>

                </Grid>




            </Grid> <!--cierre grid principal-->
        </Border>
    </Border>

</Window>
